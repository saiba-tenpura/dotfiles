! .Xresources Config

!! Colorscheme
#include ".cache/wal/colors.Xresources"

!! Xft
Xft.dpi: 96
Xft.antialias: true
Xft.lcdfilter: lcdfilter

!! URxvt
! Border
URxvt.internalBorder: 24

! Font
URxvt.font: xft:Iosevka:style=Regular:size=10
URxvt.boldFont: xft:Iosevka:style=Bold:size=10
URxvt.italicFont: xft:Iosevka:style=Italic:size=10
URxvt.boldItalicFont: xft:Iosevka:style=Bold Italic:size=10

! Scrollbar
URxvt.scrollBar: false
URxvt.scrollBar_right: false

! Settings
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveLine: 8096
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false
URxvt.iso14755_2: false

! Copy & Paste
URxvt.perl-ext-comon: ...,clipboard,...
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
