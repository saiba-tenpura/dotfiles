# Defaults: ghostty +show-config --default --docs
# Reload: Control + Shift + ,

# Cursor
cursor-style = block

# Font
# font-family = "IosevkaTerm NFM"
font-family = "Noto Sans Mono"
font-size = 8
font-synthetic-style = bold,italic,bold-italic

# Keybinds

## Window Management
keybind = ctrl+shift+n=new_window

## Tab Management
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_tab:this

## Split Management
keybind = ctrl+shift+o=new_split:right
keybind = ctrl+shift+e=new_split:down
keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+k=goto_split:up
keybind = ctrl+alt+j=goto_split:down
keybind = ctrl+alt+l=goto_split:right

## Utility
keybind = performable:ctrl+c=copy_to_clipboard

